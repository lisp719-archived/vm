. /usr/share/bash-completion/completions/git
. /usr/share/git-core/contrib/completion/git-prompt.sh

__git_complete g __git_main

export PATH=$HOME/bin/cli:$PATH

export PS1='\w$(__git_ps1)$ '
export TERMINAL=tilda

export FZF_DEFAULT_COMMAND='fd -t f'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND='fd -t d'

alias b=bundle
alias dc=docker-compose
alias g=git
alias loadbh="curl https://gist.githubusercontent.com/lisp719/5aa2e294e5d49616ff662839b47f3f57/raw/ >> ~/.bash_history && history -r ~/.bash_history"
alias mine="sudo chown -R $USER:$USER"
alias r=ranger

bit() { git clone git@bitbucket.org:lisp719/$1.git; }
